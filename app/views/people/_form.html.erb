<%= nested_form_for @person do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Name" %>
    <%= f.text_field :fname %>
    <%= f.text_field :lname %>
  </div>

  <div class="field">
    <%= f.fields_for :phones %>
    <p><%= f.link_to_add "Add a Phone", :phones %></p>
  </div>

  <div class="field">    
    <%= f.fields_for :emails %>
    <p><%= f.link_to_add "Add an email", :emails %></p>
  </div>
    
  <div class="field">     
    <%= f.fields_for :addresses %>
    <p><%= f.link_to_add "Add an Address", :addresses %></p>
  </div>
    
  <div class="field">
    <%= f.label :dob %><br />
    <%= f.date_select :dob, :start_year => Date.current.year - 5 , :end_year => 1920, :default => { :year => Date.current.year - 40 }  %>
  </div>
  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note, :size => "40x5" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>

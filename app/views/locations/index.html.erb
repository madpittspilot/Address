<h1>Locations</h1>
<br />
<table class = "sorted">
  <% @locations.each do |location| %>
  <tr class="<%= cycle("even", "odd") %>">
    <td><b><%= location.location %></b></td>
    <td><%= button_to 'Edit', edit_location_path(location), :method => :get %></td>
    <td><%= button_to 'Delete', location, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'New Location', new_location_path, :method => :get %><br />
